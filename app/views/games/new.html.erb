<h1>New Game</h1>
<% @letters.each do |letter| %>
<%= letter %>
<% end %>
<form class="form-inline" action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input class="form-control grow" type="text" name="guess" placeholder="What is the longest word you can find?" />
  <input class="btn btn-primary" type="submit" value="Play" />
</form>
